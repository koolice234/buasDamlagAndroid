<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="790dp"
                    android:orientation="vertical"
                    android:paddingBottom="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Basketball Statistics"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:text="Points Per Game" />

                    <EditText
                        android:id="@+id/editPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:text="Rebounds Per Game" />

                    <EditText
                        android:id="@+id/editRebounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="187dp"
                        android:layout_height="wrap_content"
                        android:text="Assists Per Game" />

                    <EditText
                        android:id="@+id/editAssists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:text="Blocks Per Game" />

                    <EditText
                        android:id="@+id/editBlocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:text="Steals Per Game" />

                    <EditText
                        android:id="@+id/editSteals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:text="Minutes Per Game" />

                    <EditText
                        android:id="@+id/editMinutes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="187dp"
                        android:layout_height="wrap_content"
                        android:text="Fouls Per Game" />

                    <EditText
                        android:id="@+id/editFouls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:text="Turnovers Per Game" />

                    <EditText
                        android:id="@+id/editTurnovers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="212dp"
                        android:layout_height="wrap_content"
                        android:text="Missed Field Goals Per Game" />

                    <EditText
                        android:id="@+id/editMissedFG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:text="Position" />

                    <Spinner
                        android:id="@+id/positionspinner"
                        android:layout_width="match_parent"
                        android:layout_height="46dp" />

                    <Button
                        android:id="@+id/updateStatsBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Statistics" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
