<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editname"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editaddress"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editname"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/editcontactnum"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editaddress"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Contact Number"
                android:inputType="phone" />

            <Spinner
                android:id="@+id/positionspinner"
                android:layout_width="303dp"
                android:layout_height="41dp"
                android:layout_below="@+id/lastSchoolSpinner"
                android:layout_centerHorizontal="true"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/genderspinner"
                android:layout_width="303dp"
                android:layout_height="41dp"
                android:layout_below="@+id/editpassword"
                android:layout_centerHorizontal="true"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editemail"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editBirthday"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editpassword"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editemail"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/signupbtn"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/positionspinner"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:text="REGISTER"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editname"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-52dp"
                android:text="ATHLETE REGISTRATION"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <Spinner
                android:id="@+id/lastSchoolSpinner"
                android:layout_width="303dp"
                android:layout_height="41dp"
                android:layout_below="@+id/genderspinner"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editBirthday"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editname"
                android:layout_below="@+id/editcontactnum"
                android:ems="10"
                android:hint="Birth Date"
                android:inputType="date" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
